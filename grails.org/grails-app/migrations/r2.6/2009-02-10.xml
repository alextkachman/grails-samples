<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <!--
        Adding grails version plugin was developed under
    -->
    <changeSet author="rhyolight" id="2009-02-10:1">
        <addColumn tableName="content">
            <column name="current_release" type="VARCHAR(16)"/>
        </addColumn>
    </changeSet>
    
    <!--
        Adding name for plugin 
    -->
    <changeSet author="rhyolight" id="2009-02-10:2">
        <addColumn tableName="content">
            <column name="name" type="VARCHAR(16)"/>
        </addColumn>
    </changeSet>
    
    <!--
        Adding documentation and file (for download) for plugin 
    -->
    <changeSet author="rhyolight" id="2009-02-10:3">
        <addColumn tableName="content">
            <column name="documentation_url" type="VARCHAR(255)"/>
            <column name="download_url" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>